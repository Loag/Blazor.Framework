@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

<div @attributes="UserAttributes" class="@ClassName" style="@Style">
    <div class="header">
        @if (TitleContent is null)
        {
            <div class="expand" @onclick="ToggleAsync">
                @Title
                <span class="icon expand_more"></span>
            </div>
        }
        else
        {
            @TitleContent
            <span class="icon expand expand_more" @onclick="ToggleAsync"></span>
        }
    </div>
    @ChildContent
</div>
