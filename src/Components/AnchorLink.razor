@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

@if (string.IsNullOrEmpty(LocalLink))
{
    <a @attributes="Attributes" class="@CssClass" style="@Style">
        @ChildContent
    </a>
}
else
{
    <a @attributes="Attributes" class="@CssClass" style="@Style" @onclick="OnClickLocalLinkAsync">
        @ChildContent
    </a>
}
