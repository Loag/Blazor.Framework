@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

<div @attributes="AdditionalAttributes" role="alert" class="@CssClass" style="@Style" @onclick="OnClick">
    @if (AutoIcon)
    {
        <div class="@IconClass">@Icon</div>
    }
    @ChildContent
    @if (AutoClose || OnClosed.HasDelegate || Closed is not null)
    {
        <span class="btn-close" @onclick="OnClosedAsync">close</span>
    }
</div>
