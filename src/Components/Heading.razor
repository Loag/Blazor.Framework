@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

@switch (Level)
{
    case HeadingLevel.H1:
        <h1 @ref="_element" @attributes="AdditionalAttributes" id="@Id" data-title="@Title" class="@CssClass" style="@CssStyle">@ChildContent</h1>
        break;
    case HeadingLevel.H2:
        <h2 @ref="_element" @attributes="AdditionalAttributes" id="@Id" data-title="@Title" class="@CssClass" style="@CssStyle">@ChildContent</h2>
        break;
    case HeadingLevel.H3:
        <h3 @ref="_element" @attributes="AdditionalAttributes" id="@Id" data-title="@Title" class="@CssClass" style="@CssStyle">@ChildContent</h3>
        break;
    case HeadingLevel.H4:
        <h4 @ref="_element" @attributes="AdditionalAttributes" id="@Id" data-title="@Title" class="@CssClass" style="@CssStyle">@ChildContent</h4>
        break;
    case HeadingLevel.H5:
        <h5 @ref="_element" @attributes="AdditionalAttributes" id="@Id" data-title="@Title" class="@CssClass" style="@CssStyle">@ChildContent</h5>
        break;
    case HeadingLevel.H6:
        <h6 @ref="_element" @attributes="AdditionalAttributes" id="@Id" data-title="@Title" class="@CssClass" style="@CssStyle">@ChildContent</h6>
        break;
    default:
        <span @ref="_element" @attributes="AdditionalAttributes" id="@Id" data-title="@Title" class="@CssClass" style="@CssStyle">@ChildContent</span>
        break;
}
