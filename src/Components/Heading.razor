@namespace Tavenem.Blazor.Framework

@inherits TavenemComponentBase

@switch (Level)
{
    case HeadingLevel.H1:
        <h1 @attributes="AdditionalAttributes" id="@Id" class="@CssClass" style="@CssStyle">@ChildContent</h1>
        break;
    case HeadingLevel.H2:
        <h2 @attributes="AdditionalAttributes" id="@Id" class="@CssClass" style="@CssStyle">@ChildContent</h2>
        break;
    case HeadingLevel.H3:
        <h3 @attributes="AdditionalAttributes" id="@Id" class="@CssClass" style="@CssStyle">@ChildContent</h3>
        break;
    case HeadingLevel.H4:
        <h4 @attributes="AdditionalAttributes" id="@Id" class="@CssClass" style="@CssStyle">@ChildContent</h4>
        break;
    case HeadingLevel.H5:
        <h5 @attributes="AdditionalAttributes" id="@Id" class="@CssClass" style="@CssStyle">@ChildContent</h5>
        break;
    case HeadingLevel.H6:
        <h6 @attributes="AdditionalAttributes" id="@Id" class="@CssClass" style="@CssStyle">@ChildContent</h6>
        break;
    default:
        <span @attributes="AdditionalAttributes" id="@Id" class="@CssClass" style="@CssStyle">@ChildContent</span>
        break;
}
