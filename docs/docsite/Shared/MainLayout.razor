@inherits LayoutComponentBase

<LayoutRoot LeftDrawerVisible="_drawerOpen">
    <AppBar>
        <div class="row">
            <button title="Navigation menu" class="icon-button ripple" @onclick="ToggleNavMenu">
                <span class="icon-label">
                    <svg class="icon" focusable="false" viewBox="0 0 24 24" aria-hidden="true"><path d="M0 0h24v24H0z" fill="none"></path><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path></svg>
                </span>
            </button>
            <a href="https://tavenem.com/" title="Tavenem">
                <img src="./images/tavenemlogo.svg" alt="" width="60" height="60" class="d-inline-block me-3" />
            </a>
            <h5><a href="" class="text-reset">Tavenem Blazor Framework Docs</a></h5>
        </div>
        <span>More soon...</span>
    </AppBar>
    <LeftDrawer>
        <NavMenu />
    </LeftDrawer>
    <ChildContent>
        @Body
    </ChildContent>
</LayoutRoot>

@code {
    private bool _drawerOpen;

    private void ToggleNavMenu() => _drawerOpen = !_drawerOpen;
}
